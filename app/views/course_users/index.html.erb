<p id="notice"><%= notice %></p>

<h1>Course Users</h1>

<table>
  <thead>
    <tr>
      <th>Course</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @course_users.each do |course_user| %>
      <tr>
        <td><%= course_user.course %></td>
        <td><%= course_user.user %></td>
        <td><%= link_to 'Show', course_user %></td>
        <td><%= link_to 'Edit', edit_course_user_path(course_user) %></td>
        <td><%= link_to 'Destroy', course_user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

